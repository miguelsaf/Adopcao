@model IEnumerable<Projeto_Final_de_Curso4.Models.tb_adopcao>

@{
    ViewBag.Title = "IndexCliente";
}

<h2>Lista de adopções</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id_animal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tb_estado_da_adopcao.estado_da_adopcao)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.id_funcionario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.data_de_entrega)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.data_de_solicitacao_do_animal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tb_estado_da_adopcao.estado_da_adopcao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.id_cliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.id_animal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.data_de_entrega)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.data_de_solicitacao_do_animal)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.id_adopcao }) |
            @if (item.id_estado_da_adopcao == 3)
            {
                @Html.ActionLink("Cancelar", "IndexCliente", new { id = item.id_adopcao })
            }|
            @if (item.id_estado_da_adopcao == 1 && !item.data_de_entrega.IsEmpty() )
            {
                @Html.ActionLink("Devolver", "Delete", new { id = item.id_adopcao })
            }
        </td>
    </tr>
}

</table>
